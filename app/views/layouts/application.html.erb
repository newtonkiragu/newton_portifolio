<i class="material-icons" style="color: black;">menu</i>
</a>
                        <ul class="right hide-on-med-and-down">
                            <li>
                                <a href="/#about" style="color: black;">ABOUT</a>
                            </li>
                            <li>
                                <a href="/#skills" style="color: black;">SKILLS</a>
                            </li>
                            <li>
                                <a href="/#projects" style="color: black;">PROJECTS</a>
                            </li>
                            <li>
                                <a href="/#contact" style="color: black;">CONTACT US</a>
                            </li>
                            <% if current_user.nil? %>
                                <li style="color: black;">
                                    <%= link_to new_user_session_path, class: 'login-button' do %>SIGN IN
                                        <% end %>
                                </li>
                                <% else %>
                                    <li style="color: black;">
                                        <%= link_to articles_url, class: 'login-button' do %>BLOG
                                            <% end %>
                                    </li>
                                    <li>
                                        <%= link_to "SIGN OUT", destroy_user_session_url, :method => :delete, class: 'login-button'%>
                                    </li>
                                    <% end %>
                        </ul>
                        <ul class="side-nav" id="mobile-demo">
                            <li>
                                <a href="/#about" style="color: black;">ABOUT</a>
                            </li>
                            <li>
                                <a href="/#skills" style="color: black;">SKILLS</a>
                            </li>
                            <li>
                                <a href="/#projects" style="color: black;">PROJECTS</a>
                            </li>
                            <li>
                                <a href="/#contact" style="color: black;">CONTACT US</a>
                            </li>
                            <% if current_user.nil? %>
                                <li>
                                    <%= link_to new_user_session_path, class: 'login-button' do %>SIGN IN
                                        <% end %>
                                </li>
                                <% else %>
                                    <li>
                                        <%= link_to articles_url, class: 'login-button' do %>BLOG
                                            <% end %>
                                    </li>
                                    <li>
                                        <%= link_to "Sign out", destroy_user_session_url, :method => :delete, class: 'login-button'%>
                                    </li>
                                    <% end %>
                        </ul>
                    </div>
                </nav>
            </div>
            <%= yield %>
</body>
